doctype html 
html
    head
        title Pug
        link(rel="stylesheet", href="static/css/style.css")
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    body
        include ./header.pug 
        section(id="contact" class=" text-white btn-dark")
              div.container
                div.Feedback.col-md-4.d-block.m-auto.p-3
                h4.text-center Contact
                div.Feedback
                form.form.p-3(action="/contacts" method="post")
                    div.form-group.mx-1
                        label Full Name
                        input(type="text" name="name" id="name" class="form-control")
                    div.form-group.mx-1
                        label Email
                        input(type="email" name="email" id="email" class="form-control")
                    div.form-group.mx-1
                        label Phone Number
                        input(type="text" name="mobile" id="mobile" class="form-control")
                    div.form-group.mx-1
                        label City
                        select.form-control(name="city" id="city")
                            option Delhi
                            option Pune
                    div.form-group.mx-1
                        label remark
                        textarea(cols="10" rows="5" name="remark" id="remark" class="form-control")
                    br
                    input(type="submit" value="submit" class="btn btn-success mx-auto")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
